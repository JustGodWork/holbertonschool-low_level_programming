# Compiler
CC = gcc

# Source files (list them explicitly)
SRC = main.c file1.c file2.c

# Output executable
EXECUTABLE = school

# Default target: 'all' will build the executable
all: $(EXECUTABLE)

# Build the executable
$(EXECUTABLE): $(SRC:.c=)
	$(CC) -o $@ $(SRC)

# Compile source files
%: %.c
	$(CC) -o $@ -c $<

clean:
	rm -f $(EXECUTABLE) $(SRC:.c=)
